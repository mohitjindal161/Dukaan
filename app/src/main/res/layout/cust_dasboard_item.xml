<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp" >

     
        <!-- title -->
    <TextView
        android:id="@+id/item_title"
        android:layout_width="239dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:text="Ram Karyana Store"
        android:textSize="22dp"
        android:textStyle="bold" />

    <!-- Rating Number -->
    <TextView
        android:id="@+id/rating_number"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_title"
        android:layout_below="@+id/item_title"
        android:text="4.2" />
     

    <!-- Stars -->
    <TextView
        android:id="@+id/rating_stars"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_title"
        android:layout_below="@+id/item_title"
        android:layout_marginStart="39dp"
        android:text="Rating Stars" />

    <!--  Distance-->
    <TextView
        android:id="@+id/distance"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/rating_stars"
        android:text="150m" />

    <!-- Minimum Distance-->
    <TextView
        android:id="@+id/minimum_distance"
        android:layout_width="232dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/item_title"
        android:layout_marginBottom="25dp"
        android:text="Shivaji Chownk Phase1,Hinejwadi , Pune" />
    <!-- Shop Image -->
    <ImageView
        android:id="@+id/delete"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:src="@drawable/shop2" />
     
</RelativeLayout>